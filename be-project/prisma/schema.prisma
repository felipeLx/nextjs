datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id            Int       @default(autoincrement()) @id
  name          String
  products      Product[]  
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  @@map(name: "categories")
}

model Product {
  id               Int       @default(autoincrement()) @id
  name             String
  price            Float
  image            String
  brand            String
  categories       Category[] @relation(fields: [categoryId], references: [id])
  buyers           User[] @relation(fields: [userId], references: [id])
  currentInventory Int
  description      String
  createdAt        DateTime  @default(now()) @map(name: "created_at")
  updatedAt        DateTime  @updatedAt @map(name: "updated_at")
  categoryId       Int?
  userId           Int?
  @@map(name: "products")
}

model User {
  id            Int       @default(autoincrement()) @id
  name          String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  products      Product[]
  @@map(name: "users")
}